{
    "name": "codryn/phpcalendar",
    "description": "Configurable calendar system supporting real-world and fantasy calendars with date parsing, formatting, and temporal arithmetic",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "calendar",
        "date",
        "time",
        "fantasy",
        "gregorian",
        "faerun",
        "temporal",
        "rpg"
    ],
    "authors": [
        {
            "name": "Codryn",
            "email": "codryn@example.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Codryn\\PHPCalendar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Codryn\\PHPCalendar\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover=coverage.xml",
        "test-coverage-html": "phpunit --coverage-html coverage/html",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "analyse": "phpstan analyse -c phpstan.neon",
        "fix-line-endings": "./scripts/fix-line-endings.sh",
        "verify-strict-types": "./scripts/verify-strict-types.sh",
        "ci": [
            "@fix-line-endings",
            "@test-coverage-html",
            "@cs-check",
            "@analyse",
            "@verify-strict-types"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
