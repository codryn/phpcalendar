# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# PHP files
*.php text eol=lf

# Configuration files
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.neon text eol=lf
*.dist text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
CHANGELOG.md text eol=lf
README.md text eol=lf
CONTRIBUTING.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Exclude from exports (composer archive, git archive)
/.github export-ignore
/.php-cs-fixer.cache export-ignore
/.php-cs-fixer.php export-ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/phpstan.neon export-ignore
/phpunit.xml export-ignore
/tests export-ignore
/specs export-ignore
/build export-ignore
/coverage export-ignore
